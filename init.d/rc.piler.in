#!/bin/sh
##
##

NAME=piler
PID_FILE=`SBINDIR/pilerconf -q pidfile | cut -f2 -d=`
PID_NUMBER=`test -f ${PID_FILE} && cat ${PID_FILE}`

start() {
	echo "starting $NAME . . ."
	SBINDIR/piler -d
}

stop() {
	echo "stopping $NAME"
	kill ${PID_NUMBER}
}

check_status(){
        test -f /proc/${PID_NUMBER}/status
}

case "$1" in
	start)
		start;
   	;;

	stop)
		stop;
   	;;

        status)
                if check_status;
                 then
                echo "${NAME} is running."
                 else
                echo "${NAME} is not running."
                fi
        ;;

	restart)
		stop;
		sleep 1;
		start;
   	;;

	reload)
		kill -HUP $PID_NUMBER
	;;

	*)
		echo "Usage: $0 start|stop|restart|reload|status"
esac

